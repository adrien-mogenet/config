
# 1. Platform specific aliases
if [ "`uname`" = "Darwin" ]; then
  alias emacs='/Applications/Emacs.app/Contents/MacOS/Emacs'
fi
if [ "`uname`" = "Linux" ]; then
  alias ls='ls --color=auto -h'
fi

# 2. Global aliases
alias diff='diff -u'
alias emacs='emacs -nw'
alias l='ls'
alias ll='ls -l'
alias la='ls -a'
alias lla='ls -la'
alias ..='cd ..'
